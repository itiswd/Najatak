<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- الصلاحيات الأساسية -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <!-- الاتصال بالإنترنت (لتحميل القرآن والأصوات) -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- صلاحيات الإشعارات -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <!-- إرسال الإشعارات (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    
    <!-- الإشعارات الدقيقة المجدولة -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <uses-permission android:name="android.permission.USE_EXACT_ALARM"/>
    
    <!-- الاهتزاز عند الإشعار -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- إظهار الإشعار على الشاشة المقفلة -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- صلاحيات الخدمات الخلفية -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <!-- منع إيقاف التطبيق من النوم -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    
    <!-- استقبال حدث إعادة تشغيل الجهاز -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    
    <!-- تشغيل خدمات في المقدمة (للقراءة المستمرة) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"/>
    
    <!-- تجاهل تحسين البطارية (اختياري - لضمان عمل الإشعارات) -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- التطبيق -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <application
        android:label="نَجَاتَك"
        android:name="${applicationName}"
        android:icon="@mipmap/launcher_icon"
        android:supportsRtl="true"
        android:enableOnBackInvokedCallback="true"
        android:requestLegacyExternalStorage="true">
        
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- Activity الرئيسية -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:showWhenLocked="true"
            android:turnScreenOn="true">
            
            <!-- السمة الافتراضية -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />
            
            <!-- نقطة الدخول للتطبيق -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- Receivers -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        
        <!-- Receiver لإعادة جدولة الإشعارات بعد إعادة تشغيل الجهاز -->
        <receiver 
            android:name="com.dexterous.flutterlocalnotifications.ScheduledNotificationBootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON"/>
            </intent-filter>
        </receiver>
        
        <!-- Receiver للإشعارات المجدولة -->
        <receiver 
            android:name="com.dexterous.flutterlocalnotifications.ScheduledNotificationReceiver"
            android:enabled="true"
            android:exported="false" />
        
        <!-- Receiver لأحداث النقر على الإشعار -->
        <receiver 
            android:name="com.dexterous.flutterlocalnotifications.ActionBroadcastReceiver"
            android:enabled="true"
            android:exported="false" />
        
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- WorkManager للأذكار الدورية -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup" />
        </provider>
        
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- Meta-Data -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        
        <!-- إصدار Flutter Embedding -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- Queries (للتوافق مع Android 11+) -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    
    <queries>
        <!-- للسماح بمشاركة النصوص -->
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
        
        <!-- للسماح بفتح روابط المتصفح -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
    </queries>
    
</manifest>